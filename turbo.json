{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "PORT"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["ANALYZE"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!.env.example"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!.env.example"],
      "persistent": true
    }
  }
}
